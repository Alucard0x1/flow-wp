{% extends "base.twig" %}

{% block content %}
    <article class="post-single">
        <header class="post-header">
            <h1 class="post-title">{{ post.title }}</h1>
            
            <div class="post-meta">
                <time datetime="{{ post.date|date('c') }}">{{ post.date }}</time>
                {% if post.author %}
                    <span class="post-author">by {{ post.author.name }}</span>
                {% endif %}
            </div>
        </header>

        <div class="post-content">
            {{ post.content }}
        </div>

        {% if post.terms('category') %}
            <div class="post-categories">
                <h3>Categories:</h3>
                <ul>
                    {% for category in post.terms('category') %}
                        <li><a href="{{ category.link }}">{{ category.name }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
    </article>
{% endblock %} 
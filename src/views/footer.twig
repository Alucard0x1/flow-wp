<footer class="footer">
	<div class="container">
		<div class="footer-left">
			<div class="menu-nav">
				{% for menu in footerMenu.items %}
					<div>
						<a href="{{menu.link}}">
							{{menu.title}}
						</a>
					</div>
				{% endfor %}
			</div>

			<div class="menu-social">
				{% for menu in footerSocial.items %}
					<a href="{{ menu.link }}">{{ menu.title }}</a>
				{% endfor %}
			</div>
		</div>
		<div class="footer-right">
			<p class="footer-description">
				Flexible,<br/>
				Luxury Workspaces<br/>
				Inspired by AYANA
			</p>

			<div class="newsletter">
				<p>
					Subscribe for the latest Flow<br/>updates
				</p>

				<div class="form-group">
					<div class="form-group-inline">
						<input type="text" name="" id="" class="form-control" placeholder="email">
						<a href="#">
							<svg xmlns="http://www.w3.org/2000/svg" width="33" height="33" viewbox="0 0 33 33" fill="none">
								<rect opacity="0.1" x="0.734375" y="32.1406" width="32" height="32" rx="4" transform="rotate(-90 0.734375 32.1406)" fill="white"/>
								<path d="M15.0514 10.4838L20.0011 15.4335C20.3917 15.824 20.3917 16.4572 20.0011 16.8477L15.0514 21.7975" stroke="white"/>
							</svg>
						</a>
					</div>
				</div>
			</div>
		</div>

		<div class="footer-end">
			<p>
				Address<br/>
				Jendral Sudirman street, Kav. 10-11<br/>
				South Jakarta 10220
			</p>

			<p>
				&copy;{{function('date', 'Y')}}
				Flow
			</p>

			<div>
				{% for menu in footerEnd.items %}
					<a href="{{menu.link}}">{{menu.title}}</a>
				{% endfor %}
			</div>
		</div>
	</div>
</footer>
